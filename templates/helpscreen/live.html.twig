{% extends 'helpscreen/base.html.twig' %}

{% block content %}
    <h1>{{ title }}</h1>
    {{ page|raw }}
{% endblock %}

{% block footer %}
    {% set _source_doc = wiki_source_doc_url(wiki_url, page_name) %}
    <div id="license">License: <a href="https://docs.joomla.org/JEDL" target="_blank">Joomla! Electronic Documentation License</a></div>
    <div id="source-page">Source page: <a href="{{ _source_doc }}" target="_blank">{{ _source_doc }}</a></div>
    <div id="copyright">Copyright &copy; {{ now|date('Y') }} <a href="https://www.opensourcematters.org" target="_blank">Open Source Matters, Inc.</a> All rights reserved.</div>
    <div id="report-an-issue"><a href="https://github.com/joomla/joomla-websites/issues/new?title=[jhelp]%20&amp;body=Please%20describe%20the%20problem%20or%20your%20issue" target="_blank">Report an Issue</a> with the help screens</div>
{% endblock %}
